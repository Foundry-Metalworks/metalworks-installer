{
  "name": "express-boilerplate",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "scripts": {
    "lint": "npx eslint --ext .ts --fix src/",
    "format": "npx prettier . --write",
    "clean": "npx rimraf dist",
    "build": "yarn tailwind:css && npx tsc && tsc-alias && yarn copy-files",
    "start": "node dist/index.js --env=production",
    "dev": "concurrently \"yarn tailwind:css --watch\" \"nodemon\"",
    "prepare": "husky",
    "commit": "cz",
    "tailwind:css": "npx tailwindcss -i src/public/styles/tailwind.css -o src/public/styles/style.css",
    "copy-files": "copyfiles -u 1 src/public/**/* src/views/*.pug dist/",
    "release": "standard-version"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,html,pug",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.13.10",
    "adm-zip": "^0.5.10",
    "axios": "^1.6.7",
    "dotenv": "^16.4.5",
    "dots-wrapper": "^3.11.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.4.3",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "jet-logger": "^1.3.1",
    "jsonfile": "^6.1.0",
    "morgan": "^1.10.0",
    "pug": "^3.0.2",
    "shell-exec": "^1.1.2",
    "standard-version": "^9.5.0",
    "ts-command-line-args": "^2.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@tailwindcss/typography": "^0.5.10",
    "@types/adm-zip": "^0.5.5",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.4.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonfile": "^6.1.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.20",
    "@types/npmlog": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "autoprefixer": "^10.4.17",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "daisyui": "^4.7.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^3.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
